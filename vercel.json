{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.js)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
    "headers": [
      {
        "source": "/(.*\\.js)",
        "headers": [
          { "key": "Content-Type", "value": "application/javascript" }
        ]
      }
    ]
  }
